
@{
    ViewBag.Title = "Admin";
}

<link href="~/Content/blog.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="content-section">
                <!-- Blog Entries Column -->
                <div class="col-md-10">

                    <h1 class="page-header">
                        Edit Blog Posts
                    </h1>

                    <button class="action-link">
                        @Html.ActionLink("New Post", "Create", "Posts")
                    </button>
                    @foreach (var post in Model)
                    {
                    <!-- First Blog Post -->
                        <div class="blog-content">
                            <h2>
                                <a href="@Url.Action("Details", new { slug = post.Slug })">@post.Title</a>
                            </h2>
                            <p><span class="glyphicon glyphicon-time"></span> Posted on @post.Date by Ele</p>
                            <p>@post.Excerpt</p>
                            <hr />
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            @Html.ActionLink("Read More", "Details", new { slug = post.Slug })
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            @Html.ActionLink("Edit", "Edit", new { id = post.Id })
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            @Html.ActionLink("Delete", "Delete", new { id = post.Id })
                          </div>
                            }
                  </div>
            </div>
        </div> <!-- .projects-holder -->
    </div>
</div>
