@model IEnumerable<PalmerBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="content-section">
                <!-- Blog Entries Column -->
                <div class="col-md-8">

                    <h1 class="page-header">
                        Blog Posts
                    </h1>

                    @foreach (var post in Model)
                    {
                    <!-- First Blog Post -->
                    <h2>
                        <a href="@Url.Action("Details", "Posts", new { id = post.Id })">@post.Title</a>
                    </h2>
                    <p><span class="glyphicon glyphicon-time"></span> Posted on @post.Date by Ele</p>
                    <hr>
                    <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                    <hr>
                    <p>@post.Excerpt</p> 
                    <hr />
                    @Html.ActionLink("Read More", "Details", new { id = post.Id })
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    @Html.ActionLink("Edit", "Edit", new { id = post.Id })
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    @Html.ActionLink("Delete", "Delete", new { id = post.Id })

                    }
                </div>
            </div>
        </div> <!-- .projects-holder -->
    </div>
</div>
